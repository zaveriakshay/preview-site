                const originalText = copyButton.textContent;
                copyButton.textContent = copyButton.textContent.includes('ŸÜÿ≥ÿÆ') ? 'ÿ™ŸÖ ÿßŸÑŸÜÿ≥ÿÆ!' : 'Copied!';
                setTimeout(() => {
                    copyButton.textContent = originalText;
