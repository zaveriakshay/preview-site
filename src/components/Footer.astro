        color: #ffffff;
    }

    .footer-quick-links {
        display: flex;
        gap: 24px;
        justify-content: center;
    }

    .footer-quick-link {
        color: #cbd5e1;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: color 0.15s ease;
    }

    .footer-quick-link:hover {
        color: #ffffff;
    }

    .footer-social {
        display: flex;
        gap: 12px;
    }

    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        background: #334155;
        border-radius: 6px;
        color: #cbd5e1;
        transition: all 0.15s ease;
        text-decoration: none;
    }

    .social-link:hover {
        background: #635bff;
        color: #ffffff;
        transform: translateY(-1px);
    }

    /* Footer Line 2 - Copyright, Legal */
    .footer-line-2 {
        padding: 16px 0;
    }

    .footer-legal {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 16px;
        width: 100%;
    }

    .copyright {
        color: #94a3b8;
        font-size: 14px;
    }

    .legal-links {
        display: flex;
        align-items: center;
        gap: 24px;
        flex-wrap: wrap;
    }

    .legal-link {
        color: #cbd5e1;
        text-decoration: none;
        font-size: 14px;
        transition: color 0.15s ease;
    }

    .legal-link:hover {
        color: #ffffff;
    }

    .compliance-badge {
        background: #065f46;
        color: #6ee7b7;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }


    /* RTL Styles */
    [dir="rtl"] .footer-logo {
        flex-direction: row-reverse;
    }

    [dir="rtl"] .social-links {
        flex-direction: row-reverse;
    }

    [dir="rtl"] .footer-legal {
        flex-direction: row-reverse;
    }

    [dir="rtl"] .legal-links {
        flex-direction: row-reverse;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .footer-container {
            padding: 0 16px;
        }


        .footer-line-1 {
            grid-template-columns: 1fr;
            grid-template-rows: auto auto auto;
            gap: 16px;
            text-align: center;
        }

        .footer-quick-links {
            gap: 16px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .footer-social {
            justify-content: center;
        }

        .footer-legal {
            flex-direction: column;
            align-items: center;
            gap: 12px;
            text-align: center;
        }

        .legal-links {
            gap: 16px;
        }
    }

    @media (max-width: 640px) {
