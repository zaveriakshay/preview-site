import { isStarlightRoute, isIgnorableAstroError } from '../utils/starlight-utils.ts';

export interface Props {
    language?: 'en' | 'ar';
}

// Extract language from current path if not provided
const currentPath = Astro.url.pathname;
const pathParts = currentPath.split('/').filter(Boolean);
const detectedLanguage = (pathParts[0] === 'en' || pathParts[0] === 'ar') ? pathParts[0] as 'en' | 'ar' : 'en';

const { language = detectedLanguage } = Astro.props;
const isRTL = language === 'ar';

const currentYear = new Date().getFullYear();

// Check if we're in a Starlight context using safe utility
let EditLink, LastUpdated, Pagination;
let isStarlightContext = false;

try {
    // Use our safe utility to check for Starlight context
    if (isStarlightRoute(Astro)) {
        isStarlightContext = true;
        // Dynamically import Starlight components only when needed
        const starlightComponents = await import('virtual:starlight/components/EditLink');
        EditLink = starlightComponents.default;
        const lastUpdatedComponents = await import('virtual:starlight/components/LastUpdated');
        LastUpdated = lastUpdatedComponents.default;
        const paginationComponents = await import('virtual:starlight/components/Pagination');
        Pagination = paginationComponents.default;
    }
} catch (error) {
    // Check if this is an ignorable Starlight routing error
    if (isIgnorableAstroError(error)) {
        console.debug('Starlight routing error (expected for custom routes):', error?.message || error);
    } else {
        console.warn('Unexpected error loading Starlight components:', error?.message || error);
    }
    isStarlightContext = false;
}

